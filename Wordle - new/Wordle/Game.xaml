<Page x:Class="Wordle.Game"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Wordle"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Game">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="gradient.png"/>
        </Grid.Background>
        <Frame x:Name="GameFrame" NavigationUIVisibility="Hidden"/>
        <StackPanel x:Name="Screen">
            <Label x:Name="cheat"></Label>
            <StackPanel x:Name="MainPanel">
            </StackPanel>
            <StackPanel x:Name="Keyboard" Orientation="Vertical" HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" x:Name="qRow"></StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" x:Name="aRow"></StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" x:Name="zRow"></StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
